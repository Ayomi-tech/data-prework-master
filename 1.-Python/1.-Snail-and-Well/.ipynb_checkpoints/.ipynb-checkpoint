    "advance_cm = [30, 21, 33, 77, 44, 45, 23, 45, 12, 34, 55]\n",
    "well_height = 125\n",
    "daily_distance = 30\n",
    "night_distance = 20\n",
    "snail_position = 0\n",
    "days = 0\n",
    "\n",
    "\n",
    "for num in advance_cm:\n",
    "    if snail_position < well_height:\n",
    "        print('snail is in the well')\n",
    "        snail_position = snail_position + num - night_distance\n",
    "        days += 1\n",
    "        print('Day', days)\n",
    "else:\n",
    "    print('snail is out')\n",
    "    \n"
   ]
